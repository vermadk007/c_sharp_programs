using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            int sum =0;
            for(int i=3; i<=20; i+=3)
            {
               Console.WriteLine(i);
               sum +=i;
            }
            
            Console.WriteLine("Sum of numbers is "+sum);
        }
    }
}
